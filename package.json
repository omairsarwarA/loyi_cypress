{
  "devDependencies": {
    "cypress": "^14.5.4",
    "cypress-file-upload": "^5.0.8",
    "cypress-mochawesome-reporter": "^4.0.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.0",
    "rimraf": "^6.0.1"
  },
  "scripts": {
  "clean:reports": "rimraf cypress/reports",
  "test:all": "cypress run --spec \"cypress/e2e/**/*\"",
  "report:merge": "npx mochawesome-merge cypress/reports/*.json > cypress/reports/report.json",
  "report:generate": "npx marge cypress/reports/report.json -f report -o cypress/reports/html",
  "report:all": "npm run clean:reports && npm run test:all && npm run report:merge && npm run report:generate"
}
}
